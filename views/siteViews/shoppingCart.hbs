<div class="container">
	<div class="row">
		<div class="col-12 bg-white text-center rounded p-4 mb-3">
			<h1 class="m-0">Shopping Cart</h1>
		</div>
	</div>
</div>
{{#if products}}
<div class="container mb-5">

	<div class="row">

		<div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-3 mt-1">
			<!-- Shopping cart table -->
			<div class="table-responsive">
				<table class="table text-dark">
					<thead>
						<tr>
							<th scope="col" class="border-0">
								<div class="p-2 px-3 text-uppercase">Product</div>
							</th>
							<th scope="col" class="border-0">
								<div class="py-2 text-uppercase">Price</div>
							</th>
							<th scope="col" class="border-0">
								<div class="py-2 text-uppercase">Quantity</div>
							</th>
							<th scope="col" class="border-0">
								<div class="py-2 text-uppercase">Remove</div>
							</th>
						</tr>
					</thead>
					<tbody>
						{{#each products}}
						<tr>
							<th scope="row" class="border-0">
								<div class="p-2">
									<img src="{{img}}" alt="" width="70" class="img-fluid rounded shadow-sm"
										style="height: 5rem;">
									<div class="ml-3 d-inline-block align-middle">
										<h5 class="mb-0"> <a href="#"
												class="text-dark d-inline-block align-middle">{{name}}</a></h5><span
											class="text-muted font-weight-normal font-italic d-block">Category:
											{{category}}</span>
									</div>
								</div>
							</th>
							<td class="border-0 align-middle"><strong>${{addCommas pricePer}}</strong></td>
							<td class="border-0 align-middle"><strong>{{qty}}</strong></td>
							<td class="border-0 align-middle"><a href="/removeFromCart/{{this.id}}" class="text-dark"><i
										class="fa fa-trash"></i></a></td>
						</tr>
						{{/each}}


					</tbody>
				</table>
			</div>
			<!-- End -->
		</div>
	</div>

	<div class="row">
		<div class="col-12 d-flex flex-row-reverse mb-5">
			<a href="/clearCart" class="btn btn-danger text-white rounded-pill mr-2">
				Clear
			</a>
		</div>
	</div>

	<div class="row py-5 p-4 bg-white rounded shadow-sm">
		<div class="col-md-12">
			<div class="bg-light rounded px-4 py-3 text-uppercase text-center font-weight-bold">
				<h4 class="m-0 font-weight-bold">
					Order summary
				</h4>
			</div>
			<div class="p-4">
				<p class="font-italic mb-4">
					Shipping and additional costs are calculated based on values you have entered.
				</p>
				<ul class="list-unstyled mb-4">
					<li class="d-flex justify-content-between py-3 border-bottom">
						<strong class="text-muted"> Order Subtotal </strong>
						<strong>${{toFixed cart.totalPrice 2}}</strong>
					</li>
					<li class="d-flex justify-content-between py-3 border-bottom">
						<strong class="text-muted">
							Shipping and handling
						</strong>
						<strong>$5.00</strong>
					</li>
					<li class="d-flex justify-content-between py-3 border-bottom">
						<strong class="text-muted">Tax</strong>
						<strong>${{toFixed (multiply cart.totalPrice 0.13) 2}}</strong>
					</li>
					<li class="d-flex justify-content-between py-3 border-bottom">
						<strong class="text-muted">
							Total
						</strong>
						<h5 class="font-weight-bold">
							${{addCommas (toFixed (plus (multiply cart.totalPrice 1.13) 5) 2)}}
						</h5>
					</li>
				</ul>
				<a href="{{siteData.baseUrl}}/shoppingCart/checkout"
					class="btn btn-dark text-white rounded-pill py-3 btn-block">
					Proceed to checkout
				</a>
			</div>
		</div>
	</div>
</div>

{{else}}
<div class="container">
	<h2 class="primary text-center mt-3">No Products in Shopping Cart</h2>
</div>

{{/if}}