<div class="container">
	<div class="row mt-4">
		<h1>Customize</h1>
	</div>
	<div class="row">
		<a href="/sites/{{userDetails._id}}" target="_blank">View</a>
		<form action="/customize" novalidate class="needs-validation col-md-12 mt-3">
			<div class="row">
				<div class="form-group col-md-4">
					<label for="primaryColor">Primary Color:</label>

					<input required class="form-control" type="color" name="primaryColor">
				</div>
				<div class="form-group col-md-4">
					<label for="secondaryColor">Secondary Color:</label>

					<input required class="form-control" type="color" name="secondaryColor">
				</div>
			</div>

			<div class="server-response"></div>

			<button class="btn btn-primary rounded-pill float-right mt-5" type="submit">
				Save Customization
			</button>

		</form>
	</div>
</div>