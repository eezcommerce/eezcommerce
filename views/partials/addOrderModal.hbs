	{{!-- This modal is only used to manually input data(it is not recommended!) --}}
	<div class="modal fade" id="addOrderModal" >
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content">
					<div class="modal-body">
						<button type="button" class="close" data-dismiss="modal">
							<span>&times;</span>
						</button>
						<h1>Add Order</h1>

						<form method="POST" id="addOrder" class="needs-validation" novalidate action="/addOrder">
						
								<div class="col-sm-12">	
									<div class="form-group row">
									<input
										name="fname"
										class="form-control"
										placeholder="First Name"
										required
									/>
									</div>
									<div class="form-group row">
										<input
										name="lname"
										class="form-control"
										placeholder="Last Name"
										required
									/></div>
									<div class="form-group row">
										<input
										name="items"
										class="form-control"
										placeholder="Products Ordered"
										required
									/>
									</div>
									<div class="form-group row">

  										<select class="form-control" id="oStatus">
    									<option>Placed</option>
    									<option>Processed</option>
    									<option>Shipped</option>
    									<option>Complete</option>
  										</select>
									</div>	
							</div>
								<button id="submitBtn" class="btn badge-pill btn-outline-primary btn-sm float-right" type="submit">
								Add
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>

